@model Pretest_EAP2WEBAPP.Models.News

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsId" class="control-label"></label>
                <input asp-for="NewsId" class="form-control" />
                <span asp-validation-for="NewsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsContent" class="control-label"></label>
                <textarea asp-for="NewsContent" class="form-control"></textarea>
                <span asp-validation-for="NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfPublish" class="control-label"></label>
                <input asp-for="DateOfPublish" class="form-control" />
                <span asp-validation-for="DateOfPublish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Indert" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>

<div>
    <a asp-action="Index">Back to main menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
