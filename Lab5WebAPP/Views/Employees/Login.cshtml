@model Lab5WebAPP.Models.Employee
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-controller="Employees" asp-action="Login" asp-antiforgery="true" method="post">
    <div class="form-group col-sm-12">
        <label>Code</label>
        <input asp-for="Code" class="form-control col-sm-6" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Password</label>
        <input type="password" asp-for="Password" class="form-control col-sm-6" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <button type="submit" class="btn btn-outline-primary">Login</button>
    </div>
</form>

<br />
&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
